// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/postgres
{
	"name": "CodeCity",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers-extra/features/node-asdf:0": {},
		"ghcr.io/devcontainers-extra/features/pre-commit:2": {},
		"ghcr.io/devcontainers-extra/features/redis-homebrew:1": {},
		"ghcr.io/devcontainers-extra/features/uv:1": {}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This can be used to network with other containers or the host.
	"forwardPorts": [
		8000,
		5173,
		6379,
		"db:5432"
	],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bash -i /workspaces/${localWorkspaceFolderBasename}/.devcontainer/postCreateCommand.sh",
	"postStartCommand": "bash -i /workspaces/${localWorkspaceFolderBasename}/.devcontainer/postStartCommand.sh",

	// Configure tool-specific properties.
	"customizations": {
			"extensions": [
				"sleistner.vscode-fileutils",
				"charliermarsh.ruff"
			]
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
