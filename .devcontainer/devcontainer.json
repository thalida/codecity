// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/postgres
{
	"name": "Python 3 & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers-contrib/features/poetry:2": {}
	},
	// Configure tool-specific properties.
	"customizations": {

		"vscode": {
			"settings": {
				// Python Settings
				"python.venvPath": "/root/.cache/pypoetry/virtualenvs",
				"python.defaultInterpreterPath": "/root/.cache/pypoetry/virtualenvs/api-d-StWLZG-py3.11/bin/python",
				"python.testing.pytestPath": "/root/.cache/pypoetry/virtualenvs/api-d-StWLZG-py3.11/bin/pytest",
				"python.languageServer": "Pylance",
				"python.testing.unittestEnabled": true,
				"python.testing.pytestEnabled": true,
				"python.analysis.extraPaths": [
					"/workspaces/${localWorkspaceFolderBasename}/api"
				],
				"[python]": {
					"editor.formatOnSave": true,
					"editor.codeActionsOnSave": {
						"source.fixAll": true,
						"source.organizeImports": true
					},
					"editor.defaultFormatter": "charliermarsh.ruff"
				}
			},
			"extensions": [
				"GitHub.copilot",
				"sleistner.vscode-fileutils",
				"charliermarsh.ruff",
				"ms-python.vscode-pylance",
				"yzhang.markdown-all-in-one",
				"julianchen.babylon-js-viewer"
			]
		}
	},
	"forwardPorts": [
		8000,
		5432
	],
	"postCreateCommand": "bash -i ${containerWorkspaceFolder}/.devcontainer/postCreateCommand.sh",
	"postStartCommand": "bash -i ${containerWorkspaceFolder}/.devcontainer/postStartCommand.sh",
	"remoteUser": "root"
}
